{
  "name": "lekaro",
  "version": "1.0.0",
  "description": "A modern UI for displaying weather forecasts",
  "scripts": {
    "build-ui": "webpack --config ./ui.webpack.config.js --mode production --progress",
    "watch-ui": "webpack --config ./ui.webpack.config.js --mode development --progress --watch",
    "build-service": "webpack --config ./service.webpack.config.js --mode production --progress",
    "watch-service": "webpack --config ./service.webpack.config.js --mode development --progress --watch",
    "build": "npm-run-all -p build-ui build-service",
    "watch": "npm-run-all -p watch-ui watch-service",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yishn/Lekaro.git"
  },
  "keywords": [
    "weather",
    "ui",
    "modern",
    "forecast"
  ],
  "author": "Yichuan Shen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yishn/Lekaro/issues"
  },
  "homepage": "https://github.com/yishn/Lekaro#readme",
  "dependencies": {
    "classnames": "^2.2.6",
    "express": "^4.17.1",
    "preact": "^8.4.2",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "http-server": "^0.11.1",
    "npm-run-all": "^4.1.5",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4"
  }
}
